{
	"name": "simplesphere-nextjs-starter",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": ">=22.14.0"
	},
	"repository": {
		"type": "git",
		"author": "simplesphere"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"analyze": "ANALYZE=true next build",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
		"prettier:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
		"lint": "tsc --noEmit --pretty && eslint .",
		"lint:fix": "eslint . --fix",
		"type-check": "tsc --noEmit --pretty",
		"validate": "bun type-check && bun lint && bun prettier:check",
		"clean:macos": "find . -type f -name '._*' -delete && find . -type f -name '.DS_Store' -delete",
		"git-clean": "git clean -xdf .next node_modules",
		"reset": "rm -rf .next node_modules",
		"prepare": "husky"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-avatar": "^1.1.11",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tooltip": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.563.0",
		"next": "16.1.4",
		"next-intl": "^4.7.0",
		"next-themes": "^0.4.6",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-hook-form": "^7.71.1",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.3.6",
		"zustand": "^5.0.10"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@next/bundle-analyzer": "^16.1.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@trivago/prettier-plugin-sort-imports": "^6.0.2",
		"@types/node": "^25.0.10",
		"@types/react": "^19.2.9",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-next": "16.1.4",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-unused-imports": "^4.3.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^6.0.5",
		"vitest": "^4.0.18"
	},
	"ignoreScripts": [
		"sharp",
		"unrs-resolver"
	],
	"trustedDependencies": [
		"sharp",
		"unrs-resolver"
	]
}
