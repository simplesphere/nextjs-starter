{
	"name": "simplesphere-nextjs-starter",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": ">=22.14.0"
	},
	"repository": {
		"type": "git",
		"author": "simplesphere"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"analyze": "ANALYZE=true next build",
		"prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
		"prettier:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
		"lint": "tsc --noEmit --pretty && eslint .",
		"lint:fix": "eslint . --fix",
		"type-check": "tsc --noEmit --pretty",
		"validate": "npm run type-check && npm run lint && npm run prettier:check",
		"clean:macos": "find . -type f -name '._*' -delete && find . -type f -name '.DS_Store' -delete",
		"git-clean": "git clean -xdf .next node_modules",
		"reset": "rm -rf .next node_modules",
		"prepare": "husky"
	},
	"dependencies": {
		"next": "16.1.1",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@next/bundle-analyzer": "^16.1.1",
		"@tailwindcss/postcss": "^4",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "16.1.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-unused-imports": "^4.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4",
		"typescript": "^5"
	},
	"ignoreScripts": [
		"sharp",
		"unrs-resolver"
	],
	"trustedDependencies": [
		"sharp",
		"unrs-resolver"
	]
}
